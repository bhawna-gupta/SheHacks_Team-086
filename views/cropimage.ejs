  <body>
    <%-include('./partials/navbar'); %>

      <div class="container">
          <h1 class="text-center">
              Crop Image Online
          </h1>
          <form action="/cropimage" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Upload Image:</label>
                <input class="form-control" type="file" name="file" id="" required>
            </div>
            <div class="form-group">
                <label for="width">Width:</label>
                <input required  name="width" type="number" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="height">Height:</label>
                <input required  name="height" type="number" class="form-control"/>
            </div>
            <br>
            <div class="form-group">
                <button class="btn btn-block btn-danger">
                    Crop Image
                </button>
            </div>
        </form>
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
