<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>

      <div class="container">
          <h1 class="text-center">
              Merge Multiple Images Online
          </h1>
          <form action="/mergeimages" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="files">Single or Multiple Images:</label>
                <input class="form-control" multiple type="file" name="file" id="" required>
            </div>

            <div class="form-group">
                <label for="bitrate">Select Position:</label>
                <label class="radio-inline"><input type="radio" value="+append" name="position" checked>Horizontal</label>
                <label class="radio-inline"><input type="radio" value="-append" name="position">Vertically</label>

            </div>

            <div class="form-group">
                <button class="btn btn-block btn-danger">
                    Merge Images
                </button>
            </div>
        </form>
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</html>